<div class="container p-4">
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-add-solitudes">
        <h3 class="text-update-solicitudes">Aprobar Solicitud De proveedor</h3>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </nav>
    <div class="row">
        <div class="col-md-6 mx-auto form-style p-4">
            <div class="card text-center box-shadow">
                <div class="card-header">
                    <p class="text-ayuda">Solicitud de Donacion</p>
                </div>
                <div class="card-body">

                    <form action="/solicitud_proveedores/updateproveedor/{{listarProveedores.id_solicitudes}}" method="POST">

                        <div class="form-group">
                            <input type="text" name="contacto" id="" placeholder="Nombre Completo"
                                class="form-control" value="{{listarProveedores.contacto}}" disabled>
                        </div>

                        <div class="form-group">
                            <input type="text" name="ubicacion_solicitante" placeholder="Ubicación" class="form-control"
                                value="{{listarProveedores.ubicacion_solicitante}}" disabled>
                        </div>
                        <div class="form-group">
                            <input type="text" name="telefono" placeholder="Teléfono" class="form-control"
                                value="{{listarProveedores.telefono}}" disabled>
                        </div>
                        <div class="form-group">
                            <input type="mail" name="correo" placeholder="Correo" class="form-control"
                                value="{{listarProveedores.correo}}" disabled>
                        </div>

                        <div class="form-group">
                            <input type="mail" name="nombre_solicitante" placeholder="Empresa (opcional)"
                                class="form-control" value="{{listarProveedores.nombre_solicitante}}" disabled>
                        </div>
                        <div class="form-group">
                            <textarea name="razon_proveedor"
                                placeholder="Escribenos el por que quieres donar algo a la fundacion"
                                class="form-control" disabled>{{listarProveedores.razon_proveedor}}</textarea>
                        </div>
                        <div class="form-group" >
                            <input type="text" name="id_tipo_usuario" id="" placeholder="id_tipo_usuario"
                                class="form-control" value="{{listarProveedores.descripcion_tipo_usuario}}" disabled>
                        </div>
                        <div class="form-group" >
                            <input type="text" name="id_status" id="" placeholder="id_status" class="form-control"
                                 value="{{listarProveedores.descripcion_status}}" disabled>
                        </div>
     
                        <div class="form-group">
                            <button class="btn btn-success">
                                Aprobar solicitud de donacion
                            </button>
                            <a href="/solicitud_proveedores/enproceso/{{listarProveedores.id_solicitudes}}"
                                class="btn btn-warning">En
                                Proceso</a>
                            <a href="/solicitud_proveedores/anular/{{listarProveedores.id_solicitudes}}"
                                class="btn btn-danger">Anular</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>