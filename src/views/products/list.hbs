
{{!--  --}}
<div class="product-donacion-container container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-add-solitudes">
    <h3 class="text-update-solicitudes">Lista de Productos</h3>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    </div>
</nav>
    <div class="row">
        {{#each products}}
        <div class="example-1 card col-md-4">
            <div class="wrapper">
                <div class="date">
                    <span class="day"><a href="/products/edit/{{id_product}}" class="">ID: {{id_product}}</a></span>
                </div>
                <div class="data">
                    <div class="content">
                        <span class="author"><strong>Por:</strong> {{fullname}}</span>
                        <h4 class="title"><a href="#">{{title}}</a></h4>
                        <p class="text">{{description}}</p>
                        <a href="/products/edit/{{id_product}}" class="btn btn-primary">Editar</a>
                        {{!-- <label for="show-menu" class="menu-button"><span></span></label> --}}
                    </div>
                    {{!-- <input type="checkbox" id="show-menu" /> --}}

                    <ul class="menu-content">
                        <li>
                            <label for="cantidad-product" class="cantidad-product-donada">Cantidad donada</label>
                            <a href="#" class="cantidad-ahref" id="cantidad-product">{{cantidad_producto}}</a>
                        </li>
                        <li>
                            <label for="cantidad-product" class="cantidad-product-donada">Existencia</label>
                            <a href="#" class="cantidad-ahref" id="cantidad-product">{{descripcion_status}}</a>
                        </li>
                        <li>
                            <label for="cantidad-product" class="cantidad-product-donada">Fecha Caducidad</label>
                            <a href="#" class="cantidad-ahref" id="cantidad-product">{{fecha_caducidad}}</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>