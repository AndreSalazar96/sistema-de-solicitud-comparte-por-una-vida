<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/products/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Nombre Producto" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="fecha_caducidad" class="form-control" placeholder="Fecha caducidad">
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="" rows="2" class="form-control"
                                placeholder="Descripcion"></textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar producto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>