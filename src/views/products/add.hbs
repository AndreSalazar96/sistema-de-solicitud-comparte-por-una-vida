<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/products/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Nombre Producto"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="date" name="fecha_caducidad" class="form-control"
                                placeholder="Fecha caducidad">
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Seleccione</label>
                                </div>
                                <select class="custom-select" id="inputGroupSelect01" name="id_tipe_product">
                                    {{#each tipe_product}}
                                    <option value="{{id_tipe_product}}">{{titulo_tipo_producto}}</option>
                                    {{/each}}
                                </select>

                            </div>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="cantidad_producto"
                                placeholder="Cantidad existente" autofocus>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Seleccione</label>
                                </div>
                                <select class="custom-select" id="inputGroupSelect01" name="id_status">
                                    {{#each status}}
                                    <option value="{{id_status}}">{{descripcion_status}}</option>
                                    {{/each}}
                                </select>

                            </div>
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="" rows="2" class="form-control"
                                placeholder="Descripcion"></textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar producto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>