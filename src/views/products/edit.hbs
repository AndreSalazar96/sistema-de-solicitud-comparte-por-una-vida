<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/products/edit/{{product.id_product}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{product.title}}" class="form-control" name="title" placeholder="title" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{product.fecha_caducidad}}" name="fecha_caducidad" class="form-control" placeholder="Fecha Caducidad">
                        </div> 
                        <div class="form-group">
                            <textarea name="description" id="" rows="2" class="form-control" placeholder="description">{{product.description}}</textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>