<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/products/edit/{{product.id_product}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{product.title}}" class="form-control" name="title"
                                placeholder="title" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="date" value="{{product.fecha_caducidad}}" name="fecha_caducidad"
                                class="form-control form-group" placeholder="Fecha Caducidad">
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Tipo de Producto</label>
                                </div>
                                <select class="custom-select" id="inputGroupSelect01" name="id_tipe_product">
                                    <option value="{{product.id_tipe_product}}">{{product.titulo_tipo_producto}}
                                    </option>
                                    <option disabled>──────────</option>
                                    {{#each categoria_producto}}
                                    <option value="{{id_tipe_product}}">{{titulo_tipo_producto}}
                                    </option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>


                        <div class="form-group">
                            <input type="number" class="form-control" name="cantidad_producto"
                                placeholder="Cantidad existente" value="{{product.cantidad_producto}}" autofocus>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Status de producto</label>
                                </div>
                                <select class="custom-select" id="inputGroupSelect01" name="id_status">
                                   
                                    <option value="{{product.id_status}}">{{product.descripcion_status}}</option>
                                    <option disabled>──────────</option>
                                    {{#each status_product}}
                                        <option value="{{id_status}}">{{descripcion_status}}</option>
                                    {{/each}}
                                </select>

                            </div>
                            </div>

                            <div class="form-group">
                                <textarea name="description" id="" rows="2" class="form-control"
                                    placeholder="description">{{product.description}}</textarea>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-success btn-block">
                                    Save
                                </button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>