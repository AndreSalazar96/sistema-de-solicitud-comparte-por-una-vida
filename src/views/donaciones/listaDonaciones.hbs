<div class="container ">
    <div class="row">

        <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-add-solitudes">
            <h3 class="text-update-solicitudes">Lista de Donaciones realizadas</h3>
        </nav>

        <input type="text" id="myInput" onkeyup="filterTableFunction()" placeholder="Buscar Donacion...">
        <table class="table table-bordered solicitud-table" id="myTable">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Estatus</th>
                    <th scope="col">Usuario donador</th>
                    <th scope="col">Producto</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Fecha caducidad</th>
                    <th scope="col">Ubicacion</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Fecha de registro</th>
                </tr>
            </thead>
            {{#each listaDonaciones}}
            <tbody>
                <tr>
                    <th scope="row"><a href="/donaciones/editarDonacion/{{id_donaciones}}">{{id_donaciones}}</a></td>
                    <td>{{descripcion_status}}</td>
                    <td>{{contacto}}</td>
                    <td>{{productname}}</td>
                    <td>{{cantidadproduct}}</td>
                    <td>{{fechacaduc}}</td>
                    <td>{{ubicacion_solicitante}}</td>
                    <td>{{telefono}}</td>
                    <td>{{correo}}</td>
                    <td>{{timeago created_at}}</td>
                </tr>
            </tbody>
            {{/each}}
        </table>
    </div>
</div>