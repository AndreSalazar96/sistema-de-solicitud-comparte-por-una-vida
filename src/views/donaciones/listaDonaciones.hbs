        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        </div>
    </nav>
    <div class="row">
        {{#each listaDonaciones}}
        <a href="/donaciones/editarDonacion/{{id_donaciones}}">
            <div class="example-1 card col-md-4">
                <div class="wrapper">
                    <div class="date">
                        <span class="day"><a href="/donaciones/editarDonacion/{{id_donaciones}}">ID:
                                {{id_donaciones}}</a></span>
                    </div>
                    <div class="data">
                        <div class="content">
                            <span class="author"><strong>Donador:</strong> {{contacto}}</span>
                            <span class="author"><strong>Correo:</strong> {{correo}}</span>
                            <span class="author"><strong>Telefono:</strong> {{telefono}}</span>
                            <h4 class="title"><a href="#">{{productname}}</a></h4>
                            <p class="text">{{descripcionproduct}}</p>
                            {{!-- <label for="show-menu" class="menu-button"><span></span></label> --}}
                        </div>
                        {{!-- <input type="checkbox" id="show-menu" /> --}}

                        <ul class="menu-content">
                            <li>
                                <label for="cantidad-product" class="cantidad-product-donada">Cantidad donada</label>
                                <a href="#" class="cantidad-ahref" id="cantidad-product">{{cantidadproduct}}</a>
                            </li>
                            <li>
                                <label for="cantidad-product" class="cantidad-product-donada">Identificacion
                                    Caja</label>
                                <a href="#" class="cantidad-ahref" id="cantidad-product">{{identidicacioncaja}}</a>
                            </li>
                            <li>
                                <label for="cantidad-product" class="cantidad-product-donada">Fecha Caducidad</label>
                                <a href="#" class="cantidad-ahref" id="cantidad-product">{{fechacaduc}}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </a>
        {{/each}}
    </div>
</div>