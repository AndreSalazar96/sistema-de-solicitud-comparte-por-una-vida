{{!--Vista de formulario de registro--}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-9 mx-auto">
            <div class="card text-center box-shadow">
                <div class="card-header">
                    <p class="text-ayuda">Solicitud de Ayuda</p>
                </div>
                <div class="card-body">

                    <form action="/" method="POST">
                        <div class="form-group">
                            <input type="text" name="instname" id="" placeholder="Nombre (colegio, hospital)"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nomsolicitante" placeholder="Nombre de solicitante"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="ubicacion" placeholder="Ubicación"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="telefono" placeholder="Teléfono"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="mail" name="correosolicitante" placeholder="Correo"
                                class="form-control">
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Enviar Solicitud de Ayuda
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>