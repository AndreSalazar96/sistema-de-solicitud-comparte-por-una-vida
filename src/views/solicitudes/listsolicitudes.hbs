<div class="container ">
    <div class="row">

        <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-add-solitudes">
            <h3 class="text-update-solicitudes">Lista de Solicitudes</h3>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
        <input type="text" id="myInput" onkeyup="filterTableFunctionList()" placeholder="Buscar solicitud..." >
        <table class="table table-bordered solicitud-table" id="myTable">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">status</th>
                    <th scope="col">Institucion</th>
                    <th scope="col">Tipo de Usuario</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Fecha de creacion</th>
                </tr>
            </thead>
            {{#each solicitudes}}
            <tbody>
                <tr>
                    <th scope="row"><a href="/solicitudes/editarsolicitud/{{id_solicitudes}}">{{id_solicitudes}}</a></td>
                    <td class="solicitud-class-{{descripcion_status}}">{{descripcion_status}}</td>
                    <td>{{nombre_solicitante}}</td>
                    <td>{{descripcion_tipo_usuario}}</td>
                    <td>{{telefono}}</td>
                    <td>{{correo}}</td>
                    <td>{{timeago create_at}}</td>
                    <td class="registro-accion-table {{descripcion_status}}"><a href="auth/signup/{{id_solicitudes}}" class="btn btn-primary">Registrar solicitante</a></td>
                </tr>
            </tbody>
            {{/each}}
        </table>
    </div>
</div>